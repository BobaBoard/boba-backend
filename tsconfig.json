{
  "compilerOptions": {
    "module": "commonjs",
    "esModuleInterop": true,
    "target": "ESNext",
    "moduleResolution": "node",
    "sourceMap": true,
    "outDir": "./dist",
    "baseUrl": ".",
    "noErrorTruncation": true,
    "paths": {
      "utils/*": ["utils/*"],
      "handlers/*": ["handlers/*"],
      "server/*": ["server/*"],
      "types/*": ["types/*"],
      "test/*": ["test/*"]
    },
    "skipLibCheck": true,
    "types": ["node", "jest", "jest-extended"],
    "strict": true
  },
  "include": [
    "server/**/*",
    "extra-types.d.ts",
    "utils",
    "handlers",
    "utils/generate-open-api-spec.ts"
  ],
  "exclude": ["node_modules"]
}
