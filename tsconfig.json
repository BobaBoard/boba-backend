{
  "compilerOptions": {
    "module": "commonjs",
    "esModuleInterop": true,
    "target": "ESNext",
    "moduleResolution": "node",
    "sourceMap": true,
    "outDir": "./dist",
    "baseUrl": ".",
    "paths": {
      "zodtypes": ["zodtypes"],
      "utils/*": ["utils/*"],
      "handlers/*": ["handlers/*"],
      "server/*": ["server/*"],
      "types/*": ["types/*"],
      "test/*": ["test/*"],
      "Types": ["Types"]
    },
    "skipLibCheck": true,
    "types": ["node", "jest", "jest-extended"],
    "strict": true
  },
  "include": ["server/**/*", "extra-types.d.ts", "utils", "handlers"],
  "exclude": ["node_modules"]
}
