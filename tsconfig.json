{
  "compilerOptions": {
    "module": "commonjs",
    "esModuleInterop": true,
    "target": "es6",
    "moduleResolution": "node",
    "sourceMap": true,
    "outDir": "dist",
    "baseUrl": ".",
    "paths": {
      "utils/*": ["utils/*"],
      "handlers/*": ["handlers/*"],
      "server/*": ["server/*"],
      "types/*": ["types/*"],
      "test/*": ["test/*"],
      "Types": ["Types"]
    },
    "skipLibCheck": true,
    "types": ["node", "jest", "jest-extended"],
    // strict mode checks (for incremental adoption)
    "noImplicitAny": true,
    "noImplicitThis": true,
    "alwaysStrict": true,
    // "strictBindCallApply": true
    // "strictNullChecks": true
    "strictFunctionTypes": true,
    // "strictPropertyInitialization": true
    "useUnknownInCatchVariables": true
  },
  "include": ["server/**/*", "extra-types.d.ts", "utils", "handlers"],
  "exclude": ["node_modules"]
}
