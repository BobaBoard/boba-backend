{
  "compilerOptions": {
    "module": "commonjs",
    "esModuleInterop": true,
    "target": "es6",
    "noImplicitAny": true,
    "moduleResolution": "node",
    "sourceMap": true,
    "outDir": "dist",
    "baseUrl": ".",
    "paths": {
      "utils/*": ["utils/*"]
    },
    "skipLibCheck": true,
    "types": ["node", "jest"]
  },
  "include": [
    "server/**/*",
    "extra-types.d.ts",
    "Types.ts",
    "utils",
    "handlers"
  ],
  "exclude": ["node_modules"]
}
