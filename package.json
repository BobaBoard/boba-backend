{
  "name": "bobaserver",
  "version": "1.0.0",
  "description": "Server for BobaBoard",
  "main": "dist/server/index.js",
  "scripts": {
    "dev:watch": "cross-env DEBUG=bobaserver:*,-*info DEBUG_DEPTH=10 npm run start:watch",
    "start": "cross-env DEBUG=bobaserver:* ts-node -r dotenv/config server/index.ts dotenv_config_path=./.env.prod",
    "start:watch": "nodemon --exec ts-node server/index.ts",
    "start-db": "docker-compose down && docker-compose up",
    "test": "cross-env DEBUG=bobaserver:* ./node_modules/mocha/bin/mocha --exclude './node_modules/**' --timeout 3000 -r ts-node/register -r dotenv/config './**/*.test.ts'",
    "test:watch": "yarn run test  -- --watch --watch-extensions ts --watch-files . ",
    "test:file": "cross-env DEBUG=bobaserver:* ./node_modules/mocha/bin/mocha --watch --watch-extensions ts --watch-files . --exclude './node_modules/**' --timeout 3000 -r ts-node/register -r dotenv/config",
    "test:docker": "docker-compose -f docker-compose.test.yml run --rm test",
    "deploy": "gcloud config set project bobaboard && gcloud app deploy --version live",
    "stage": "gcloud config set project bobaboard && gcloud app deploy --quiet --version staging  && gcloud app services set-traffic backend --splits live=1  --quiet"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/essential-randomness/bobaserver.git"
  },
  "author": "",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/essential-randomness/bobaserver/issues"
  },
  "homepage": "https://github.com/essential-randomness/bobaserver#readme",
  "dependencies": {
    "@types/cors": "^2.8.6",
    "@types/debug": "^4.1.5",
    "@types/express": "^4.17.6",
    "@types/node": "^13.11.1",
    "@types/pg": "^7.14.3",
    "@types/supertest": "^2.0.8",
    "@types/uuid": "^8.0.0",
    "axios": "^0.19.2",
    "body-parser": "^1.19.0",
    "cors": "^2.8.5",
    "cors-express": "^0.2.2",
    "cross-env": "^7.0.2",
    "debug": "^4.1.1",
    "dotenv": "^8.2.0",
    "dotenv-expand": "^5.1.0",
    "express": "^4.17.1",
    "firebase-admin": "^8.12.1",
    "pg-promise": "^10.5.6",
    "ts-node": "^8.9.1",
    "uuid": "^8.1.0"
  },
  "devDependencies": {
    "@types/chai": "^4.2.11",
    "@types/deep-equal-in-any-order": "^1.0.1",
    "@types/mocha": "^7.0.2",
    "@types/node": "^13.11.1",
    "chai": "^4.2.0",
    "deep-equal-in-any-order": "^1.0.28",
    "mocha": "^7.1.1",
    "nodemon": "^2.0.3",
    "supertest": "^4.0.2",
    "tslint": "^6.1.1",
    "typescript": "^3.8.3"
  }
}
