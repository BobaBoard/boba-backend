{
  "name": "bobaserver",
  "version": "1.0.0",
  "description": "Server for BobaBoard",
  "main": "dist/server/bobaserver.js",
  "scripts": {
    "prebuild": "tslint -c tslint.json -p tsconfig.json --fix",
    "build": "tsc",
    "prestart": "npm run build",
    "start": "node .",
    "start-db": "docker-compose down && docker-compose up",
    "test": "(npm run start-db &> .dblogs) & (sleep 10s && DEBUG=bobaserver:* ./node_modules/mocha/bin/mocha --timeout 3000 -r ts-node/register test/**/*.test.ts && docker-compose down)"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/essential-randomness/bobaserver.git"
  },
  "author": "",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/essential-randomness/bobaserver/issues"
  },
  "homepage": "https://github.com/essential-randomness/bobaserver#readme",
  "dependencies": {
    "@types/debug": "^4.1.5",
    "@types/pg": "^7.14.3",
    "@types/supertest": "^2.0.8",
    "debug": "^4.1.1",
    "dotenv": "^8.2.0",
    "express": "^4.17.1",
    "pg": "^8.0.2"
  },
  "devDependencies": {
    "@types/chai": "^4.2.11",
    "@types/express": "^4.17.6",
    "@types/mocha": "^7.0.2",
    "@types/node": "^13.11.1",
    "chai": "^4.2.0",
    "dotenv-expand": "^5.1.0",
    "mocha": "^7.1.1",
    "supertest": "^4.0.2",
    "ts-node": "^8.8.2",
    "tslint": "^6.1.1",
    "typescript": "^3.8.3"
  }
}
