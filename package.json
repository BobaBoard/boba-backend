    "url": "https://github.com/essential-randomness/bobaserver/issues"
  },
  "homepage": "https://github.com/essential-randomness/bobaserver#readme",
  "dependencies": {
    "@types/debug": "^4.1.5",
    "@types/pg": "^7.14.3",
    "@types/supertest": "^2.0.8",
    "debug": "^4.1.1",
    "dotenv": "^8.2.0",
    "express": "^4.17.1",
    "pg": "^8.0.2"
  },
  "devDependencies": {
    "@types/chai": "^4.2.11",
    "@types/express": "^4.17.6",
    "@types/mocha": "^7.0.2",
    "@types/node": "^13.11.1",
